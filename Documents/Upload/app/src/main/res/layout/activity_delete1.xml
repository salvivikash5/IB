<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_delete1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adnan.upload.Delete1Activity">

    <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="250dp"
       android:id="@+id/rel">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
       <TextView
           android:id="@+id/textView1"
           android:layout_width="match_parent"
           android:layout_marginLeft="20px"
           android:layout_marginBottom="20px"
           android:layout_marginRight="20px"
           android:layout_marginTop="20px"
           android:layout_height="wrap_content"
           android:text="Let G(x) be the generator polynomial used for CRC checking. What is the condition that should be satisfied by G(x) to detect odd number of bits in error?"
           android:textSize="25dp"
           android:textStyle="italic" />
        </android.support.v4.widget.NestedScrollView>
   </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/rel">

        <Button
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G(x) contains more than two terms"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G(x) does not divide 1+x^k, for any k not exceeding the frame length"
            android:layout_below="@+id/imageButton1"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1+x is a factor of G(x)"
            android:layout_below="@+id/imageButton2"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="G(x) has an odd number of terms."
            android:layout_below="@+id/imageButton3"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>